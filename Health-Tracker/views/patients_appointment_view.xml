<?xml version="1.0" ?>

<odoo>

    <record id = "patient_appointment_action" model="ir.actions.act_window">
        <field name = "name">Appointment</field>
        <field name = "res_model">patients.appointment</field>
        <field name = "view_mode">tree,form</field>
    </record>

    <record id="patient_appointment_view_tree" model="ir.ui.view">
        <field name ="name">patients.appointment.tree</field>
        <field name ="model">patients.appointment</field>
        <field name ="arch" type="xml">
        <tree>
            <field name ="patient_name"/>
            <field name ="date"/>
            <field name ="contact"/>
            <field name ="doctor"/>
            <field name ="consulting_fees"/>
            <field name ="state"/>
        </tree>

        </field>
    </record>

    <record id="patient_appointment_view_form" model="ir.ui.view">
        <field name ="name">patients.appointment.form</field>
        <field name ="model">patients.appointment</field>
        <field name ="arch" type="xml">
        <form>
            <header>
                <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                <button name="action_accept" type="object" string="Accept" class="btn btn-outline-info btn-lg"/>
                <button name="action_refuse" type="object" string="Refuse" class="btn btn-outline-info btn-lg"/>
            </header>

            <sheet>
                <widget name="web_ribbon" title="confirmed" bg_color="bg-success" attrs="{'invisible':[('state','!=','confirmed')]}"/>
                <widget name="web_ribbon" title="cancelled" bg_color="bg-danger"  attrs="{'invisible':[('state','!=','cancelled')]}"/>

            <div>
                <field name="image" widget="image" options="{'size':[150,150]}"/> <br/> <br/>
                <h1> <field name ="patient_name" nolabel = "1" placeholder = "Patient Name"/> </h1>
            </div>
            <br/> 
            <group>
                <group>
                    <field name ="date"/>
                    <field name ="contact" string="Phone no."/>
                    <field name ="doctor"/>
                </group>
                <group>
                    <field name ="consulting_fees"/>
                    <field name ="state"/>
                    <field name = "date_deadline"/>
                </group>
    
            </group>
                    <br/>
            <notebook>
                <page string = "Description">
                    <group>
                    <field name = "reason" placeholder = "Reason For Appointment"/>
                    <field name = "treatment" placeholder = "Treatment Method"/>
                    <field name = "admit" />
                    <field name = "next_step" placeholder = "Information"/>
                    <field name = "medicine_prescribed" placeholder = "Medicines" widget = "many2many_tags" options="{'color_field':'color'}"/>
                    <field name = "next_appointment" placeholder="Date"/>
                    <field name = "active"/>
                    </group>
                </page>

                <page string = "Medical">
                        <field name = "vital_ids"/>
                </page>

                <page string = "Others">
                    <group>
                        <field name = "notes" placeholder="Any Notes !!"/>
                    </group>
                </page>   

            </notebook>
            </sheet>
        </form>

        </field>
    </record>

    <record id="patients_appointment_view_search" model="ir.ui.view">
        <field name="name">patients.appointment.search</field>
        <field name="model">patients.appointment</field>
        <field name="arch" type="xml">

            <search>
                <field name="patient_name" 
                filter_domain = "[('patient_name','ilike',self)]"/>
                <field name="contact" string="Phone no."/>
                <field name="date"/>

                <filter string="Scheduled" name="state" 
                domain="[('state','=','scheduled')]"/>
                <separator/>
                <filter string="Admit" name="admit" domain="[('admit','=',True)]" />

                <group>
                    <filter string="date" name="date" context="{'group_by':'date'}"/>
                    <filter string="status" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>

    </record>


</odoo>