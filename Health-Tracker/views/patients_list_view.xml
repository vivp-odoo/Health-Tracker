<?xml version="1.0" ?>

<odoo>

<record id = "patients_list_action" model="ir.actions.act_window">
    <field name="name">Patients</field>
    <field name="res_model">patients.list</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Add Patients
          </p><p>
            Enter Patients Information
          </p>
    </field>
</record>

<record id="patients_list_tree_view" model="ir.ui.view">
    <field name="name">patients.list.tree</field>
    <field name="model">patients.list</field>
    <field name="arch" type="xml">
        <tree>
            <field name = "name"/>
            <field name = "gender"/>
            <field name = "contact"/>
            <field name = "date"/>
            <field name = "address"/>
            <field name = "email"/>
        </tree>    
    </field>
</record>



</odoo>