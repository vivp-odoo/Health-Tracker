<?xml version="1.0" ?>

<odoo>

<record id = "patients_list_action" model="ir.actions.act_window">
    <field name="name">Patients</field>
    <field name="res_model">patients.list</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Add Patients
          </p><p>
            Enter Patients Information
          </p>
    </field>
</record>

<record id="patient_list_view_tree" model="ir.ui.view">
    <field name="name">patients.list.tree</field>
    <field name="model">patients.list</field>
    <field name="arch" type="xml">
        <tree>
            <field name = "name"/>
            <field name = "gender"/>
            <field name = "phone"/>
            <field name = "phone"/>
            <field name = "date"/>
            <field name = "address"/>
            <field name = "email"/>
        </tree>    
    </field>
</record>

<record id="patient_list_view_form" model="ir.ui.view">
        <field name ="name">patients.list.form</field>
        <field name ="model">patients.list</field>
        <field name ="arch" type="xml">
        <form>
            <sheet>
            <div>
            <h1> <field name ="name" nolabel = "1"/> </h1>
            </div>
            <group>
                <group>
                    <field name ="address"/>
                    <field name ="state"/>
                    <field name ="country"/>
                    <field name ="street1"/>
                    <field name ="street2"/>
                    <field name ="zip"/>
                    <field name ="date"/>
                </group>
                <group>
                    <field name ="gender"/>
                    <field name = "phone"/>
                    <field name = "mobile"/>
                    <field name ="email"/>
                </group>
            </group>
            </sheet>
            <notebook>
                <page string="">

                </page>

                <page>
                </page>

                <page>
                </page>

            </notebook>
        </form>

        </field>
    </record>

    


</odoo>